<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_dark"
    android:orientation="vertical" >

    <include layout="@layout/module_titlebar_other" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/frame_selectbar"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bitthday_source_straight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selectbar_height"
            android:background="@drawable/selector_background" >

            <ImageView
                android:id="@+id/attention_imageView2"
                android:layout_width="@dimen/selectbar_imagesize"
                android:layout_height="@dimen/selectbar_imagesize"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_addbir_straightly" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/attention_imageView2"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/bitthday_source_straight"
                android:textColor="@color/theme_textcolor_text"
                android:textSize="@dimen/selectbar_textsize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:contentDescription="@string/app_name"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:src="@drawable/icon_toright" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/theme_gray_dark" />

        <RelativeLayout
            android:id="@+id/bitthday_source_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selectbar_height"
            android:background="@drawable/selector_background" >

            <ImageView
                android:id="@+id/attention_imageView1"
                android:layout_width="@dimen/selectbar_imagesize"
                android:layout_height="@dimen/selectbar_imagesize"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_addbir_from_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/attention_imageView1"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/bitthday_source_contact"
                android:textColor="@color/theme_textcolor_text"
                android:textSize="@dimen/selectbar_textsize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:contentDescription="@string/app_name"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:src="@drawable/icon_toright" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/theme_gray_dark" />

        <RelativeLayout
            android:id="@+id/bitthday_source_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selectbar_height"
            android:background="@drawable/selector_background" >

            <ImageView
                android:id="@+id/attention_imageView3"
                android:layout_width="@dimen/selectbar_imagesize"
                android:layout_height="@dimen/selectbar_imagesize"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_addbir_from_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/attention_imageView3"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/bitthday_source_friend"
                android:textColor="@color/theme_textcolor_text"
                android:textSize="@dimen/selectbar_textsize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:contentDescription="@string/app_name"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:src="@drawable/icon_toright" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>