<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/trends_dealbg"
    android:padding="@dimen/layout_padding_normal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/reserve_time_title"
        android:textColor="#FF1199CC"
        android:textSize="@dimen/module_title_textsize"
        android:padding="@dimen/layout_padding_mini"  />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        android:background="@color/theme_gray_dark" />

    <!--
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    -->

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	    
	    <TextView 
	        android:id="@+id/reserve_item_name"
	        android:layout_width="0.0dip"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="@dimen/textsize_content"
	        android:textColor="@color/theme_textcolor_text"
	        android:text="@string/reserve_item_name"/>
	
	    <TextView 
	        android:id="@+id/reserve_item_bt_munus"
	        android:layout_width="25dip"
	        android:layout_height="25dip"
	        android:gravity="center"
	        android:text="@string/button_minus"
	        android:textColor="@android:color/white"
	        android:background="@drawable/selector_button"/>
	    
	    <EditText 
	        android:id="@+id/reserve_item_et_number"
	        android:layout_width="30dip"
	        android:layout_height="25dip"
	        android:layout_margin="2dip"
	        android:gravity="center"
	        android:inputType="number"
	        android:textSize="12sp"
	        android:background="@drawable/frame_edittext"/>
	    
	    <TextView 
	        android:id="@+id/reserve_item_bt_plus"
	        android:layout_width="25dip"
	        android:layout_height="25dip"
	        android:gravity="center"
	        android:text="@string/button_plus"
	        android:textColor="@android:color/white"
	        android:background="@drawable/selector_button"/>
	    
	</LinearLayout>

    <LinearLayout
        android:id="@+id/reserve_time_contianer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_padding_mini" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/theme_textcolor_text"
            android:text="@string/reserve_time_arrival" />

        <TextView
            android:id="@+id/reserve_time_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="@dimen/textsize_content" 
            android:textColor="@color/theme_textcolor_text"/>
    </LinearLayout>
    <!-- </LinearLayout> -->
</LinearLayout>