<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color_dark"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingTop="15dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titlebar_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/trends_welcome_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_titlesmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/trends_welcome_net"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_titlesmall" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/welcome_one" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFDD11"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/trends_welcome_bottom"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_titlesmall" />

</LinearLayout>