<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/layout_padding_mini" >

    <FrameLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >
        <QuickContactBadge
            android:id="@+id/rsrmenulistitem_headimg"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:scaleType="fitXY" />
    </FrameLayout>

    <TextView
        android:id="@+id/rsrmenulistitem_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_name"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

    <TextView
        android:id="@+id/rsrmenulistitem_oldprice"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_oldprice"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

    <TextView
        android:id="@+id/rsrmenulistitem_newprice"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_newprice"
        android:textColor="@color/theme_red"
        android:textSize="@dimen/textsize_content" />

</LinearLayout>