<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_padding_mini" >

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_headimg"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_name"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_oldprice"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/rsrmenulistheader_newprice"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

</LinearLayout>