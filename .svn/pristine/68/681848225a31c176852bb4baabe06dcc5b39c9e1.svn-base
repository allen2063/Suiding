<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_dark"
    android:orientation="vertical" >

    <include layout="@layout/module_titlebar_other" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding_normal" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_selectbar">

                <RelativeLayout
                    android:id="@+id/editaccount_bar_headimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_background"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_headimg"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <QuickContactBadge
                        android:id="@+id/editaccount_headimg"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_normal"
                android:background="@drawable/frame_selectbar"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/editaccount_bar_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_nickname"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_nickname"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_nickname"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_name"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_name"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_name"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_sex"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_sex"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_sex"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_englishname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_englishname"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_englishname"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_englishname"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_birthday"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_birthday"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_birthday"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_autograph"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_autograph"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_autograph"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_autograph"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_phone"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_phone"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_phone"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_approve_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/icon_checked"
                        android:gravity="center_vertical"
                        android:text="@string/editaccount_tv_approve" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/editaccount_bar_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_email"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_email"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/editaccount_tv_email"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:id="@+id/editaccount_approve_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/icon_checked"
                        android:gravity="center_vertical"
                        android:text="@string/editaccount_tv_approve" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_normal"
                android:background="@drawable/frame_selectbar"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/editaccount_bar_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:visibility="gone"  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/editaccount_tv_logout"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/account_tv_logout"
                        android:textColor="@color/green_dark"
                        android:textSize="@dimen/textsize_titlesmall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_toright" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>