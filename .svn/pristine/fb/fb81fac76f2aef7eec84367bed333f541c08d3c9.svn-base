<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:background="@drawable/trends_dealbg"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding_mini" >

    <TextView
        android:id="@+id/module_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding_mini"
        android:singleLine="true"
        android:text="@string/detail_storeinfo"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_titlesmall"
        android:visibility="gone" />

    <include 
        android:id="@+id/module_detail_divider"
        layout="@layout/module_divider_list"
        android:visibility="gone"  />

    <TextView
        android:id="@+id/module_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding_mini"
        android:text="@string/detail_description"
        android:textColor="@color/theme_textcolor_text"
        android:textSize="@dimen/textsize_content" />

</LinearLayout>