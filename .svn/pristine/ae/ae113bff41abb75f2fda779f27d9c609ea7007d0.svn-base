<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_background_white"
    android:orientation="horizontal" >

    <QuickContactBadge
        android:id="@+id/listitem_twitter_headimg"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="@dimen/layout_padding_mini"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_padding_mini"
        android:orientation="vertical" >

        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2dip"
	        android:orientation="horizontal" >
	        
        	<TextView android:id="@+id/listitem_twitter_title"
        		android:layout_width="0dip"
        		android:layout_weight="1.0"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical"
        		android:text="@string/listitem_twitter_title"
                android:textColor="#2299DD"
        		android:textSize="@dimen/textsize_titlesmall"/>
        	
        	<TextView
                android:id="@+id/listitem_twitter_duration"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/listitem_coupon_date"
	            android:textColor="@color/gray"
                android:textSize="@dimen/textsize_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/listitem_twitter_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:maxLines="4"
            android:paddingBottom="2dip"
            android:text="@string/listitem_twitter_describe"
            android:textColor="@color/theme_textcolor_text"
            android:textSize="@dimen/textsize_content" />

        <LinearLayout
            android:id="@+id/listitem_twitter_imagelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/listitem_twitter_image_1"
                android:layout_width="0dip"
            	android:layout_height="80dip"
                android:layout_weight="1.0"
                android:layout_margin="2dip"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"/>

            <ImageView
                android:id="@+id/listitem_twitter_image_2"
                android:layout_width="0dip"
            	android:layout_height="80dip"
                android:layout_weight="1.0"
                android:layout_margin="2dip"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"/>

            <ImageView
                android:id="@+id/listitem_twitter_image_3"
                android:layout_width="0dip"
            	android:layout_height="80dip"
                android:layout_weight="1.0"
                android:layout_margin="2dip"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:layout_marginRight="0dip"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/listitem_twitter_time"
	            android:layout_width="0dip"
	            android:layout_weight="1.0"
	            android:layout_height="wrap_content"
	            android:paddingBottom="2dip"
	            android:text="@string/listitem_twitter_time"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/textsize_small" />
	        <TextView
	            android:id="@+id/listitem_twitter_order"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingBottom="2dip"
	            android:text="@string/listitem_twitter_order"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/textsize_small"  />
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>