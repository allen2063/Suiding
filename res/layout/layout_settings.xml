<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical" >

    <include layout="@layout/module_titlebar_other" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/theme_background_dark"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/frame_selectbar"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/settings_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background" >

                    <ImageView
                        android:id="@+id/attention_imageView2"
                        android:layout_width="@dimen/selectbar_imagesize"
                        android:layout_height="@dimen/selectbar_imagesize"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_feedback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/attention_imageView2"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="@string/title_activity_feedback"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:src="@drawable/icon_toright" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <RelativeLayout
                    android:id="@+id/settings_helptopay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background" >

                    <ImageView
                        android:id="@+id/attention_imageView1"
                        android:layout_width="@dimen/selectbar_imagesize"
                        android:layout_height="@dimen/selectbar_imagesize"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_helptopay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/attention_imageView1"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="@string/settings_helptopay"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:src="@drawable/icon_toright" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <RelativeLayout
                    android:id="@+id/settings_chectupdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background" >

                    <ImageView
                        android:id="@+id/attention_imageView3"
                        android:layout_width="@dimen/selectbar_imagesize"
                        android:layout_height="@dimen/selectbar_imagesize"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_checkupdate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/attention_imageView3"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="@string/settings_chectupdate"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:src="@drawable/icon_toright" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <RelativeLayout
                    android:id="@+id/settings_aboutapp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background" >

                    <ImageView
                        android:id="@+id/attention_imageView4"
                        android:layout_width="@dimen/selectbar_imagesize"
                        android:layout_height="@dimen/selectbar_imagesize"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_aboutapp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_toRightOf="@+id/attention_imageView4"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="@string/title_activity_aboutleso"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:src="@drawable/icon_toright" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/frame_selectbar"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/settings_nopicture"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/selector_background"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_using_nopicture_mode"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <CheckBox
                        android:id="@+id/settings_cb_nopicture"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/selector_checkbox" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <LinearLayout
                    android:id="@+id/settings_clear_cache"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:background="@drawable/selector_background"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="5dip"
                        android:text="@string/setting_clear_cache"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <TextView
                        android:id="@+id/settings_cache_size"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/frame_selectbar"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/settings_promotion"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/selector_background"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/settings_acceptpromotion"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <CheckBox
                        android:id="@+id/settings_cb_promotion"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/selector_checkbox" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/theme_gray_dark" />

                <RelativeLayout
                    android:id="@+id/settings_notifysound"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/selectbar_height"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/selector_background"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/settings_notifysound"
                        android:textColor="@color/theme_textcolor_text"
                        android:textSize="@dimen/selectbar_textsize" />

                    <CheckBox
                        android:id="@+id/settings_cb_notifysound"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/selector_checkbox_notifymodel" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>