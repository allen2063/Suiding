<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_dark"
    android:orientation="vertical" >

   	<include 
        android:id="@+id/feedback_layout_titlebar"
        layout="@layout/module_titlebar_other"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dip" >

        <EditText
            android:id="@+id/feedback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_little_black"
            android:ems="10"
            android:hint="@string/feedback_et_title"
            android:padding="7dip" />

        <EditText
            android:id="@+id/feedback_text"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_marginTop="10dip"
            android:background="@drawable/frame_little_black"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/feedback_et_content"
            android:padding="7dip"
            android:singleLine="false" />

        <LinearLayout
            android:id="@+id/feedback_servicephone"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/frame_selectbar"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/about_servicephone"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_weight="9"
                android:gravity="right|center_vertical"
                android:text="@string/about_servicephone_number"
                android:textColor="#71c2dc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_toright" />
        </LinearLayout>

        <Button
            android:id="@+id/feedback_submit"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="15dp"
            android:background="@color/theme_color"
            android:text="@string/feedback_bt_submit"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>