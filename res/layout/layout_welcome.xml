<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    
    <LinearLayout 
        android:layout_width="150dip"
        android:layout_height="80dip"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <View 
        	android:id="@+id/welcome_block_1"
            android:layout_weight="3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/theme_color"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_2"
            android:layout_weight="4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/theme_cyan"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_3"
            android:layout_weight="5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/theme_green"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_4"
            android:layout_weight="6"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/theme_orange"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_5"
            android:layout_weight="7"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/theme_red"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_6"
            android:layout_weight="8"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/theme_purple"
        	android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/welcome_enjoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/welcome_enjoy" />

    <TextView 
        android:id="@+id/welcome_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_enjoy"
        android:layout_marginBottom="33dp"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:textColor="@color/theme_color_dark"/>

</RelativeLayout>