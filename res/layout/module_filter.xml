<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
            android:background="@android:color/white"  
    android:orientation="vertical" >

    <LinearLayout
    	android:id="@+id/module_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fiterbar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/module_filter_type"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/ic_category_other"
            android:drawablePadding="2dip"
            android:drawableRight="@drawable/ic_dropdown_arrow"
            android:gravity="left|center"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text="@string/location_sp_type_string"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="@color/theme_gray_dark" />

        <TextView
            android:id="@+id/module_filter_area"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="2dip"
            android:drawableRight="@drawable/ic_dropdown_arrow"
            android:gravity="left|center"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text="@string/location_sp_area_string"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="@color/theme_gray_dark" />

        <TextView
            android:id="@+id/module_filter_sort"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/ic_order"
            android:drawablePadding="2dip"
            android:drawableRight="@drawable/ic_dropdown_arrow"
            android:gravity="left|center"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text="@string/loaction_sp_sort_string"
            android:textColor="#ff666666"
            android:textSize="13.0sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@color/theme_gray_dark" />

</LinearLayout>