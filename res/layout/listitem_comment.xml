<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding_mini"
    android:orientation="vertical"
    android:background="@drawable/selector_background">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
    	android:orientation="horizontal">
    	
        <TextView 
            android:id="@+id/listitem_review_username"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
        	android:textColor="#ff2b8dab"
            android:text="@string/listitem_review_tv_username"/>
        
        <RatingBar
        	android:id="@+id/listitem_review_grade"
            android:layout_width="wrap_content"
            android:layout_height="18dip"
            android:layout_marginLeft="13.0dip"
            android:isIndicator="true"
            android:maxHeight="16.0dip"
            android:minHeight="16.0dip"
            android:numStars="5"
            android:progressDrawable="@drawable/selector_rating" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/listitem_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_textcolor_text"
        android:text="@string/listitem_review_tv_content"/>
        
    <TextView 
        android:id="@+id/listitem_review_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listitem_review_tv_date"/>
    
</LinearLayout>