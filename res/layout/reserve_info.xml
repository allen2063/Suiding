<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/trends_dealbg"
    android:padding="@dimen/layout_padding_mini" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reserve_info_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:text="@string/reserve_info_name"
            android:textColor="@color/theme_color_dark"
            android:textSize="@dimen/module_title_textsize" />

        <TextView
            android:id="@+id/reserve_info_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reserve_info_discount"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        android:background="@color/theme_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/layout_padding_mini"
            android:text="@string/reserve_info_tv_price"
            android:textColor="@color/theme_textcolor_text"
            android:textSize="@dimen/textsize_content" />

        <TextView
            android:id="@+id/reserve_info_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:singleLine="true"
            android:text="@string/reserve_info_price"
            android:textColor="@color/theme_textcolor_text"
            android:textSize="@dimen/textsize_content" />
    </LinearLayout>

</LinearLayout>