<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_gray_dark"
    android:orientation="horizontal" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:padding="@dimen/layout_padding_normal"
        android:text="@string/reserve_hotel_orderprice"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/orderinfo_price_orderprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_padding_mini"
        android:gravity="right|center_vertical"
        android:text="@string/reserve_hotel_totalprice"
        android:textSize="@dimen/textsize_titlesmall"
        android:textColor="@color/theme_color_dark" />

</LinearLayout>