<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/theme_titlebar_background" >

    <ImageView
        android:id="@+id/titlebar_other_goback"
        android:layout_width="70dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_button_back"
        android:scaleType="centerInside"
        android:src="@drawable/icon_goback" />

    <TextView
        android:id="@+id/titlebar_other_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:singleLine="true"
        android:textColor="@color/theme_textcolor_title"
        android:textSize="@dimen/titlebar_textsize" />

    <TextView
        android:id="@+id/titlebar_other_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/selector_button_white"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:visibility="gone"
        android:text="@string/titlebar_other_tv_finish"
        android:textColor="@color/theme_color_dark" />

    <CheckBox 
        android:id="@+id/titlebar_other_collect"
        android:button="@null"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:visibility="gone"
        android:background="@drawable/selector_favorite" />

    <ImageView
        android:id="@+id/titlebar_other_add"
        android:layout_width="70dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_button_back"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/ic_add" />
    
    <ImageView
        android:id="@+id/titlebar_other_backup"
        android:layout_width="70dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_button_back"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/icon_backup" />
    
    <ImageView
        android:id="@+id/titlebar_other_ok"
        android:layout_width="70dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_button_back"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/icon_ok" />
    
    <TextView
        android:id="@+id/title_other_cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:drawableLeft="@drawable/citychoose_white"
        android:gravity="center_vertical"
        android:text="@string/tv_location"
        android:visibility="gone"
        android:textColor="@color/theme_textcolor_title" />
</RelativeLayout>