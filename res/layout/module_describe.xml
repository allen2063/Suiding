<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/module_describe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:text="@string/module_description_tv_title"
        android:textColor="@color/green_dark" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/theme_color_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            android:background="@color/theme_color_dark" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView 
            android:id="@+id/detail_store_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/theme_textcolor_text"
            android:text="@string/detail_description"/>

    </FrameLayout>

</LinearLayout>